<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editor // <%= item.name %></title>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body class="bg-slate-200 text-slate-900 font-mono">
    <%- include('../partials/admin/header') %>
    
    <div class="max-w-5xl mx-auto p-4 md:p-8">
        
        <header class="flex justify-between items-center mb-8 border-b-2 border-slate-900 pb-4">
            <div>
                <h1 class="text-3xl font-extrabold uppercase">
                    <%= detail ? 'Edit Item' : 'Setup Item' %>
                </h1>
                <p class="text-sm text-slate-500 font-bold"><%= item.name %></p>
            </div>
            <a href="/admin/dashboard" class="bg-white text-slate-900 px-4 py-2 border-2 border-slate-900 font-bold uppercase text-sm hover:bg-slate-100">
                &larr; Dashboard
            </a>
        </header>

        <% if (error) { %>
            <div class="bg-red-100 border-l-4 border-red-600 text-red-900 p-4 mb-6 font-bold shadow-md">
                <i class="fa-solid fa-triangle-exclamation mr-2"></i> <%= error %>
            </div>
        <% } %>

        <form action="/admin/item/<%= item.id %>/upsert" method="POST" enctype="multipart/form-data" class="bg-white border-2 border-slate-900 brutalist-shadow-dark p-8 space-y-6">
            
            <% if(detail) { %>
                <input type="hidden" name="detailId" value="<%= detail.id %>">
            <% } %>
            
            <div class="p-6 bg-slate-50 border-2 border-slate-200">
                
                <div class="mb-4">
                    <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Item Name (Rename)</label>
                    <input type="text" name="name" value="<%= item.name %>" class="w-full px-4 py-2 border-2 border-slate-900 focus:outline-none focus:ring-4 focus:ring-fuchsia-500 font-bold uppercase text-lg bg-white" required>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Category</label>
                        <select name="categoryId" class="w-full px-4 py-2 border-2 border-slate-900 focus:outline-none focus:ring-4 focus:ring-fuchsia-500 font-bold uppercase text-sm bg-white">
                            <option value="">-- No Category --</option>
                            <% if(locals.categories) { %>
                                <% categories.forEach(cat => { %>
                                    <option value="<%= cat.id %>" <%= item.categoryId === cat.id ? 'selected' : '' %>><%= cat.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>

                    <div>
                        <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Tags (Comma Separated)</label>
                        <input type="text" name="tags" value="<%= item.tags ? item.tags.join(', ') : '' %>" 
                            class="w-full px-4 py-2 border-2 border-slate-900 bg-white focus:outline-none focus:ring-4 focus:ring-fuchsia-500 font-bold uppercase text-sm placeholder-slate-400">
                    </div>
                </div>
            </div>

            <div>
                <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Headline</label>
                <input type="text" name="title" value="<%= detail ? detail.title : '' %>" class="w-full px-4 py-3 border-2 border-slate-900 focus:ring-4 focus:ring-cyan-400 focus:outline-none font-bold text-lg" required>
            </div>

            <div>
                <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Description (Markdown)</label>
                
                <div class="flex gap-4 mb-2">
                    <button type="button" id="md-trigger" class="text-xs bg-slate-200 px-3 py-1 border-2 border-slate-900 hover:bg-white uppercase font-bold">
                        <i class="fa-solid fa-file-arrow-up mr-1"></i> Load .md File
                    </button>
                    <input type="file" id="md-file" class="hidden" accept=".md">
                </div>
                
                <textarea name="content" rows="12" class="w-full px-4 py-3 border-2 border-slate-900 focus:ring-4 focus:ring-cyan-400 focus:outline-none font-mono text-sm"><%= detail ? detail.content : '' %></textarea>
            </div>

            <div>
                <label class="block font-bold uppercase mb-2 text-sm text-slate-500">External Link</label>
                <input type="url" name="externalLink" value="<%= detail ? detail.externalLink : '' %>" class="w-full px-4 py-3 border-2 border-slate-900 focus:ring-4 focus:ring-cyan-400 focus:outline-none font-mono text-sm">
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 pt-4 border-t-2 border-slate-200">
                
                <div>
                    <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Screenshots</label>
                    
                    <div class="space-y-2 mb-4">
                        <% if(detail && detail.images) detail.images.forEach(img => { %>
                            <div class="existing-item flex items-center justify-between border border-slate-300 p-1 bg-slate-50">
                                <img src="<%= img %>" class="h-10 w-10 object-cover border border-slate-200">
                                <input type="hidden" name="existingImages" value="<%= img %>">
                                
                                <button type="button" class="remove-existing text-slate-400 hover:text-red-600 font-bold px-2">
                                    <i class="fa-solid fa-times"></i>
                                </button>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div id="dz-images" class="border-4 border-dashed border-slate-300 p-6 text-center cursor-pointer hover:bg-cyan-50 hover:border-cyan-400 transition-colors bg-slate-50">
                        <p class="font-bold text-slate-400 uppercase text-xs">Drop New Images</p>
                        <input type="file" name="newImages" id="newImages" multiple accept="image/*" class="hidden">
                    </div>
                    <div id="preview-images" class="mt-2 space-y-1"></div>
                </div>

                <div>
                    <label class="block font-bold uppercase mb-2 text-sm text-slate-500">Product File</label>
                    
                    <% if(detail && detail.filePath) { %>
                        <div class="p-3 border border-green-500 bg-green-50 font-mono text-xs mb-4 break-all flex items-center gap-2">
                            <i class="fa-solid fa-file-zipper text-green-600"></i>
                            <%= detail.filePath.split('/').pop() %>
                            <input type="hidden" name="existingFilePath" value="<%= detail.filePath %>">
                        </div>
                    <% } else { %>
                        <div class="p-3 border border-red-200 text-red-500 font-mono text-xs mb-4 font-bold">No file uploaded</div>
                    <% } %>

                    <div id="dz-file" class="border-4 border-dashed border-slate-300 p-6 text-center cursor-pointer hover:bg-fuchsia-50 hover:border-fuchsia-400 transition-colors bg-slate-50">
                        <p class="font-bold text-slate-400 uppercase text-xs">Upload / Replace File</p>
                        <input type="file" name="productFile" id="productFile" class="hidden">
                    </div>
                    <div id="preview-file" class="mt-2 text-xs"></div>
                </div>
            </div>

            <button class="w-full bg-slate-900 text-white text-xl font-bold uppercase py-4 border-2 border-slate-900 hover:bg-cyan-400 hover:text-slate-900 transition-colors shadow-lg">
                <%= detail ? 'Update Item' : 'Publish Item' %>
            </button>
        </form>
    </div>
    
    <script src="/js/admin.js"></script>
</body>
</html>
