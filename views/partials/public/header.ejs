<header class="sticky top-0 z-40 bg-white border-b-2 border-slate-900 font-mono">
    
    <div class="container mx-auto flex items-center justify-between p-4">
        
        <div class="flex items-center gap-8">
            <a href="/" class="text-2xl font-extrabold text-slate-900 uppercase">
                <i class="fa-solid fa-biohazard text-cyan-400 mr-2"></i>
                Free Templates
            </a>
            
            <nav class="hidden md:flex items-center gap-6">
                <a href="/" class="text-slate-900 font-bold hover:text-fuchsia-500 transition-colors">
                    <i class="fa-solid fa-house mr-1"></i> Home
                </a>
            </nav>
        </div>

        <div class="relative hidden sm:block">
            <form action="/" method="GET">
                <input
                    type="text"
                    name="search"
                    placeholder="SEARCH..."
                    value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
                    class="w-40 md:w-64 px-4 py-2 border-2 border-slate-900 bg-white text-slate-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-fuchsia-500 uppercase font-bold placeholder-slate-400"
                />
                
                <button type="submit" class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 hover:text-slate-900">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
    </div>
</header>
