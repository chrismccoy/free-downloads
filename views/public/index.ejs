<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Free Templates // <%= pageTitle %></title>
    <link rel="stylesheet" href="/css/app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body class="bg-slate-200 text-slate-900 font-mono">
    <div class="flex min-h-screen">
        
        <%- include('../partials/public/sidebar') %>

        <div class="flex-1 flex flex-col">
            
            <%- include('../partials/public/header') %>

            <main class="p-4 md:p-8 flex-1">
                
                <div class="mb-8 border-b-2 border-slate-900 pb-8">
                    <h1 class="text-4xl md:text-6xl font-extrabold text-slate-900 uppercase leading-none mb-4">
                        <%= pageTitle %>
                    </h1>
                    
                    <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                         <p class="text-slate-600 font-bold">Found <%= pagination.totalItems %> results for "<%= searchQuery %>"</p>
                         <a href="/" class="inline-block mt-4 text-xs font-bold uppercase bg-slate-900 text-white px-3 py-1 hover:bg-red-500">Clear Search</a>
                    <% } else { %>
                        <p class="text-slate-600 text-lg max-w-2xl font-bold">
                            Free and ready-to-use HTML & CSS templates for your next project.
                        </p>
                    <% } %>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
                    <% if (items.length > 0) { %>
                        <% items.forEach(item => { %>
                            
                            <div class="bg-white border-2 border-slate-900 brutalist-shadow-dark transition-transform hover:-translate-x-1 hover:-translate-y-1 flex flex-col h-full">
                                
                                <div class="relative group border-b-2 border-slate-900">
                                    <div class="h-8 bg-slate-100 border-b-2 border-slate-900 flex items-center px-3 gap-2">
                                        <div class="w-3 h-3 rounded-full bg-red-400 border-2 border-slate-900"></div>
                                        <div class="w-3 h-3 rounded-full bg-amber-400 border-2 border-slate-900"></div>
                                        <div class="w-3 h-3 rounded-full bg-green-400 border-2 border-slate-900"></div>
                                        <div class="flex-1 h-3 bg-white border-2 border-slate-900 rounded-sm ml-2"></div>
                                    </div>

                                    <div class="w-full h-64 bg-slate-100 flex items-center justify-center overflow-hidden relative">
                                        <% if (item.thumbnail) { %>
                                            <img src="<%= item.thumbnail %>" alt="<%= item.name %>" class="w-full h-full object-cover object-top">
                                        <% } else { %>
                                            <div class="text-slate-300 text-6xl"><i class="fa-solid fa-image"></i></div>
                                        <% } %>
                                        
                                        <div class="absolute inset-0 bg-slate-900/90 flex items-center justify-center gap-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                            <a href="/item/<%= item.slug %>" class="bg-fuchsia-500 text-white px-4 py-2 border-2 border-slate-900 font-bold hover:bg-fuchsia-600 transition-colors brutalist-shadow-sm uppercase text-xs sm:text-sm">
                                                <i class="fa-solid fa-eye mr-2"></i>Details
                                            </a>
                                            <a href="/item/<%= item.slug %>/download" class="bg-cyan-400 text-slate-900 px-4 py-2 border-2 border-slate-900 font-bold hover:bg-cyan-500 transition-colors brutalist-shadow-sm uppercase text-xs sm:text-sm">
                                                <i class="fa-solid fa-download mr-2"></i>Get
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="p-4 flex-1 flex flex-col justify-between">
                                    <div class="mb-4">
                                        <h3 class="text-xl font-bold uppercase truncate mb-3">
                                            <a href="/item/<%= item.slug %>" class="hover:text-fuchsia-600 transition-colors border-b-2 border-transparent hover:border-fuchsia-600">
                                                <%= item.name %>
                                            </a>
                                        </h3>
                                    </div>
                                    
                                    <div class="mt-auto border-t-2 border-slate-100 pt-3 flex items-start justify-between gap-4">
                                        
                                        <div class="truncate max-w-[40%] pt-0.5">
                                            <% if(item.category) { %>
                                                <a href="/category/<%= item.category.slug %>" class="flex items-center gap-2 text-xs font-bold uppercase text-slate-500 hover:text-cyan-600 transition-colors truncate">
                                                    <i class="<%= item.category.icon %>"></i>
                                                    <span class="truncate"><%= item.category.name %></span>
                                                </a>
                                            <% } else { %>
                                                <span class="text-xs font-bold uppercase text-slate-300">Uncategorized</span>
                                            <% } %>
                                        </div>

                                        <div class="flex flex-wrap justify-end gap-1 max-w-[60%]">
                                            <% if (item.tags && item.tags.length > 0) { %>
                                                <% item.tags.forEach(tag => { %>
                                                    <a href="/tag/<%= tag %>" class="bg-lime-300 text-slate-900 px-1.5 py-0.5 text-[10px] font-bold uppercase border border-slate-900 hover:bg-lime-400 transition-colors">#<%= tag %></a>
                                                <% }) %>
                                            <% } %>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="col-span-full border-4 border-dashed border-slate-900 p-12 text-center">
                            <h3 class="text-2xl font-bold uppercase">No Items Found</h3>
                        </div>
                    <% } %>
                </div>

                <%- include('../partials/public/pagination') %>
            </main>

	    <%- include('../partials/public/footer') %>

        </div>
    </div>
</body>
</html>
