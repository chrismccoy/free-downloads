# ==============================================
# ENVIRONMENT DEFINITION
# ==============================================

# Controls the application mode.
# Options: 'development' | 'production'
# - 'development': Shows "System/Admin Access" links in the public sidebar for easier navigation.
# - 'production': Hides admin links from the public sidebar.
NODE_ENV=development

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# The HTTP port the application will listen on.
# Default: 3000
PORT=3000

# ==============================================
# SECURITY & SESSION
# ==============================================

# A long, random string used to sign the session ID cookie.
# Changing this will invalidate all existing login sessions.
# Example: 'd0n7_t3ll_any0n3_th1s_s3cr3t_k3y'
SESSION_SECRET=change_me_to_something_secure_and_random

# ==============================================
# ADMIN AUTHENTICATION
# ==============================================

# The username required to access the /admin panel.
ADMIN_USER=admin

# The password required to access the /admin panel.
# Note: In this simple implementation, this is stored as plain text here.
# Ensure your .env file is included in .gitignore to prevent leaking credentials.
ADMIN_PASSWORD=change_this_password_immediately

# ==============================================
# FRONTEND SETTINGS
# ==============================================

# Controls how many items appear on the grid (Home, Category, Tag pages)
# before pagination controls appear.
# Default: 9
ITEMS_PER_PAGE=9
